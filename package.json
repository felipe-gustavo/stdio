{
  "name": "stdio",
  "version": "2.0.0",
  "description": "Standard input/output manager for Node.js",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgmonda/stdio.git"
  },
  "keywords": [
    "standard",
    "input",
    "console",
    "output",
    "terminal",
    "system",
    "arguments",
    "cli",
    "repl"
  ],
  "author": "Sergio Garcia Mondaray <sgmonda@gmail.com> (http://sgmonda.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sgmonda/stdio/issues"
  },
  "homepage": "https://github.com/sgmonda/stdio#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}